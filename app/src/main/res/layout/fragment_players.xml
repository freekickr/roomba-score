<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.freekickr.roombascore.ui.gameplayers.PlayersViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/button2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/etPlayer1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="1 игрок"
                    android:inputType="textPersonName"
                    android:autofillHints="username" />

                <EditText
                    android:id="@+id/etPlayer2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="2 игрок"
                    android:inputType="textPersonName"
                    android:autofillHints="username" />

                <EditText
                    android:id="@+id/etPlayer3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="3 игрок"
                    android:inputType="textPersonName"
                    android:autofillHints="username" />

                <EditText
                    android:id="@+id/etPlayer4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="4 игрок"
                    android:inputType="textPersonName"
                    android:autofillHints="username" />

                <EditText
                    android:id="@+id/etPlayer5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="5 игрок"
                    android:inputType="textPersonName"
                    android:autofillHints="username" />

                <EditText
                    android:id="@+id/etPlayer6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="6 игрок"
                    android:inputType="textPersonName"
                    android:autofillHints="username" />

                <EditText
                    android:id="@+id/etPlayer7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="7 игрок"
                    android:inputType="textPersonName"
                    android:autofillHints="username" />

                <EditText
                    android:id="@+id/etPlayer8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="8 игрок"
                    android:inputType="textPersonName"
                    android:autofillHints="username" />

            </LinearLayout>

        </ScrollView>

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="@{() -> viewModel.onStartGameClicked()}"
            android:text="start game"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>